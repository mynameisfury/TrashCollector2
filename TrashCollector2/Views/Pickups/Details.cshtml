                @Html.DisplayFor(Model => Model.Customer.Address.State.StateName)
                @Html.DisplayFor(Model => Model.Customer.Address.ZipCode)
            </dd>
        }


        <dt>
            @Html.DisplayNameFor(model => model.PickupDate)
